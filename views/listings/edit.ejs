<% layout("/layouts/boilerplate") %>
body>
    <div class="row">
        <div class="col-8 offset-2">
    
        <form method="post" action="/listings/<%=listing._id%>?_method=PUT">
        <div>
            <lable for="listing[title]" class="form-label" >Title</lable> 
            <input name="listing[title]"value="<%=listing.title%>" placeholder="enter name" type="text" class="form-control">
        </div>
        <br>
        <div>
            <lable for="listing[description]" class="form-label">Description</lable>
            <textarea name="listing[description]"  class="form-control" >"<%=listing.description%>"</textarea>
        </div>
        <br>
        <div>
            <lable for="listing[image]" class="form-label">Title</lable>
            <input name="listing[image]"  value="<%=listing.image%>"  class="form-control">
        </div>
        <br>
        <div class="row">

            <div class="col-4">
                <lable for="listing[price]" class="form-label">Price</lable>
                <input name="listing[price]" value="<%=listing.price%>"  class="form-control">
            </div>
            <br>
            <div class="col-8">
                <lable for="listing[location]" class="form-label">Location</lable>
                <input name="listing[location]" value="<%=listing.location%>"  class="form-control">
            </div>
        </div>
        <br>
        <button class="btn btn-dark">submit</button>
    </form>
</body>
</div>
</div>

