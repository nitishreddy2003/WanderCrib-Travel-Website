<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">SignUp on WanderCrib</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <lable for="Username" class="form-label">Username</lable> 
                <input 
                name="username" 
                id="username"
                type="text"
                class="form-control" 
                required
                />
                <div class="valid-feedback">Looks goood!</div>

                <lable for="email" class="form-label">Email</lable> 
                <input 
                name="email" 
                id="email"
                type="email"
                class="form-control" 
                required
                />

                 <lable for="password" class="form-label">Password</lable> 
                <input 
                name="password" 
                id="password"
                type="password"
                class="form-control" 
                required
                />
                <div class="valid-feedback">Looks goood!</div>

            </div>
           
            <button class="btn btn-success">Submit</button>
        </form>
    </div>
</div>